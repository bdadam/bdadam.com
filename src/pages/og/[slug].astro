---
import Layout from '../../layouts/Layout.astro';
// import { SocialImage } from 'astro-social-images';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
    const posts = await getCollection('blog');

    return posts.map((post) => {
        return {
            params: {
                slug: post.slug,
            },
            props: {
                post,
            },
        };
    });
}

const { post, frontMatter } = Astro.props;
const { Content, headings, remarkPluginFrontmatter } = await post.render();
---

<svg version="1.1" width="300" height="200" xmlns="http://www.w3.org/2000/svg">
    <rect width="100%" height="100%" fill="red"></rect>

    <circle cx="150" cy="100" r="80" fill="green"></circle>

    <text x="150" y="125" font-size="60" text-anchor="middle" fill="white">{post.data.title}</text>
</svg>
