{
    "printWidth": 120,
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "es5",
    "overrides": [
        {
            "files": ["*.yaml", ".*.yaml", "*.yml", ".*.yml", "package.json", "tsconfig.json"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.md"],
            "options": {
                "tabWidth": 2,
                "printWidth": 80
            }
        }
    ],
    "htmlWhitespaceSensitivity": "css"
}
